{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": true,
    "outDir": "ts_build",
    "typeRoots": ["node_modules/@types/"],
    "types": ["es6-promise"]
  },
  "exclude": ["node_modules"]
}